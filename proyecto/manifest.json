{
  "name": "Proyecto Probabilidad",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Analiza la probabilidad de que cada vendedor de Amazon sea el mejor, usando su calificación y el número de calificaciones",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["src/bg/controller.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Amazon Reviews",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": ["https://www.amazon.com.mx/", "tabs", "activeTab"],
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com.mx/*"],
      "css": ["src/inject/inject.css"],
      "js": ["src/inject/inject.js"]
    }
  ],
  "web_accessible_resources": [
    "src/inject/parse_dom.js",
    "src/inject/rating.js"
  ]
}
